pipeline {
    agent any
    tools {
        ant 'Ant'
    }
    parameters {
        string(name: 'INSTALLER_VERSION', defaultValue: '1.0.0', description: 'Installer version')
        string(name: 'INSTALLER_REMOTE_PATH', defaultValue: '/opt/installer/installer.zip', description: 'Remote installer path')
        string(name: 'EXTERNAL_MQ_ZIP_PATH', defaultValue: '', description: 'External MQ zip path on remote server')
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello'
            }
        }
        stage('Retrieve Installer') {
            when {
                expression { isUnix() == false }
            }
            steps {
                bat """
                    if not exist lib mkdir lib
                    if not exist lib\\ivy.jar (
                        curl -o lib\\ivy.jar https://repo1.maven.org/maven2/org/apache/ivy/ivy/2.5.2/ivy-2.5.2.jar
                    )
                    ant -f build.xml -lib lib -Dinstaller.version=%INSTALLER_VERSION% retrieve-installer-win32
                """
            }
        }
        stage('Download Installer via SCP') {
            steps {
                bat """
                    if not exist lib\\jsch.jar (
                        curl -o lib\\jsch.jar https://repo1.maven.org/maven2/com/jcraft/jsch/0.1.55/jsch-0.1.55.jar
                    )
                    if not exist lib\\ant-jsch.jar (
                        curl -o lib\\ant-jsch.jar https://repo1.maven.org/maven2/org/apache/ant/ant-jsch/1.10.14/ant-jsch-1.10.14.jar
                    )
                    ant -f build.xml -lib lib -DINSTALLER_REMOTE_PATH=%INSTALLER_REMOTE_PATH% download-installer-scp
                """
            }
        }
        stage('Deploy ActiveMQ') {
            steps {
                bat """
                    ant -f activemq_build.xml -lib lib -Dexternal.MQ.Zip.Path=%EXTERNAL_MQ_ZIP_PATH% deliver-external-mq
                """
            }
        }
    }
}
